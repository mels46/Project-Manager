<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/ikona.png" type="image/x-icon">
    <link rel="stylesheet" href="/bootstrap/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body class="background">
<div class="flashes">
    <%if(flashMessages){%>
    <%if(flashMessages.success){%>
    <div class="flash succes"><%=flashMessages.success%></div>
    <%}else if(flashMessages.error){%>
    <div class="flash error"><%=flashMessages.error%></div>
    <%}%>
    <%}%>
</div>

<h1><%= title %></h1>
<div class="container " style="align-items: center">
<table class="table">
    <thead>
    <tr>
        <th>Ime i prezime</th>
        <th>Email</th>
        <th>Status</th>
        <th>Uredi podatke radnika</th>
        <th>Obrisi radnika</th>


    </tr>
    </thead>
    <tbody >
    <%users.forEach(user=> {%>

    <tr >
        <td ><%=user.fullName%></td>
        <td ><%=user.email%></td>
        <td ><%=user.status%></td>

        <td ><a href="<%=`/users/${user._id}/edit`%>">Uredi</a></td>
        <td ><a href="<%=`/users/${user._id}/delete?_method=DELETE`%>" onclick="return confirm('Are you aure yout want to delete this user')">Obri≈°i</a></td>

    </tr>

    <%});%>

    </tbody>

</table>
</div>

</body>
</html>